<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="row mb-2">
        <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
      </div>
      <div class="row justify-content-md-center">
        <%= f.submit class: "btn btn-outline-light btn-lg col-2 mt-2" %>
      </div>
      <% end %>
      <div class="row justify-content-md-center mb-3">
        <%= link_to "[ Cancel and Return to Articles List ]", articles_path, class: "text-info col-3" %>
      </div>
    </div>
  </div>
</div>
