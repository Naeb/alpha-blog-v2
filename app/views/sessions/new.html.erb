<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="row mb-2">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your e-mail address" %>
        </div>
      </div>
      <div class="row mb-2">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="row justify-content-md-center">
        <%= f.submit "Log In", class: "btn btn-outline-light btn-lg col-2 mt-2" %>
      </div>
      <% end %>
      <div class="row justify-content-md-center mb-3">
        <%= link_to "[ Cancel and Return to Articles List ]", articles_path, class: "text-info col-3" %>
      </div>
    </div>
  </div>
</div>
